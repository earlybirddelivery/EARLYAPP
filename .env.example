# EARLYAPP Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# MONGODB CONFIGURATION
# ========================================
MONGODB_URI=mongodb+srv://earlyapp_user:PASSWORD@cluster0.xxxxx.mongodb.net/earlyapp?retryWrites=true&w=majority
MONGODB_DB_NAME=earlyapp

# ========================================
# JWT & SECURITY
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-min-32-characters-long-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# FIREBASE CONFIGURATION
# ========================================
FIREBASE_PROJECT_ID=earlybird-delivery-ap
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY_HERE
FIREBASE_AUTH_DOMAIN=earlybird-delivery-ap.firebaseapp.com
FIREBASE_DATABASE_URL=https://earlybird-delivery-ap.firebaseio.com
FIREBASE_STORAGE_BUCKET=earlybird-delivery-ap.appspot.com
FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
FIREBASE_APP_ID=YOUR_APP_ID

# ========================================
# FIREBASE CLOUD MESSAGING (FCM)
# ========================================
FCM_SERVER_API_KEY=YOUR_FCM_SERVER_API_KEY_HERE
FCM_CREDENTIALS_JSON=/app/backend/config/firebase-credentials.json

# ========================================
# GOOGLE CLOUD CONFIGURATION
# ========================================
GCP_PROJECT_ID=earlyapp-backend
GOOGLE_APPLICATION_CREDENTIALS=/app/backend/config/gcp-service-account.json

# ========================================
# APPLICATION CONFIGURATION
# ========================================
ENVIRONMENT=production
DEBUG=False
WORKERS=4

# ========================================
# CORS & SECURITY
# ========================================
ALLOWED_ORIGINS=https://earlybird-delivery-ap.web.app,http://localhost:3000
ALLOWED_HOSTS=earlyapp-backend-*.a.run.app,localhost

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# API CONFIGURATION
# ========================================
API_VERSION=v1
API_PREFIX=/api/v1
API_TITLE=EARLYAPP API
API_DESCRIPTION=Early Bird Delivery Platform API
API_TERMS_OF_SERVICE=https://earlybird.local/terms
API_CONTACT_EMAIL=support@earlybird.local

# ========================================
# DATABASE BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_SUBSCRIPTION=true

# ========================================
# EXTERNAL SERVICES
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@earlybird.local

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ========================================
# FRONTEND CONFIGURATION (for frontend .env)
# ========================================
REACT_APP_API_URL=https://earlyapp-backend-xxxxx.a.run.app
REACT_APP_FIREBASE_PROJECT_ID=earlybird-delivery-ap
REACT_APP_FIREBASE_API_KEY=YOUR_API_KEY
REACT_APP_FCM_VAPID_KEY=YOUR_VAPID_KEY
REACT_APP_ENVIRONMENT=production

# ========================================
# MONITORING & ANALYTICS
# ========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
DATADOG_API_KEY=your-datadog-api-key
ENABLE_METRICS=true
