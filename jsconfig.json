{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@components/*": ["frontend/src/components/*"],
      "@utils/*": ["frontend/src/utils/*"],
      "@lib/*": ["frontend/src/lib/*"]
    },
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "frontend/src/**/*",
    "mobile/src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "frontend/src/lib/kirana-ui",
    "**/node_modules/**"
  ]
}
